            <Image src="https://www.nativescript.org/images/default-source/Blogs/ns-logo_share_600x315.png" stretch="aspectFill" />
            
            <Image src="{{ imageUri }}" width="100" height="100" stretch="aspectFill" />
            <!-- << image-usage-xml -->
        </StackLayout>
    </ScrollView>
</Page>