		<ActionBar title="Usage"/>
	</Page.actionBar>

    <ScrollView>
        <StackLayout loaded="containerLoaded" verticalAlignment="middle">
            <!-- >> image-usage-xml -->
            <Image src="res://icon" stretch="aspectFill" />
            
